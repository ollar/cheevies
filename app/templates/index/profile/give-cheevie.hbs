{{#unless this.isMe}}

<Modal
    @goBack={{this.goBack}}
    @class="give-cheevie-modal"
    @giveCheevieModal={{true}}
    @busy={{this.busy}}
    as |modal|>
    <modal.overlay />
    <modal.close />
    <modal.content>

    <div class="cheevies grid-wrapper-3">
        {{#each this.cheevies as |cheevie|}}
            <div class="cheevie-item has-text-centered">
                <div {{on 'click' (fn this.pickCheevie cheevie)}}>
                    <CheevieInList @cheevie={{cheevie}} @id={{cheevie.id}} />
                </div>
            </div>
        {{else}}
            <div class="empty-placeholder">
                {{t 'no-cheevies-placeholder'}}
            </div>
        {{/each}}
    </div>
    </modal.content>
</Modal>

{{/unless}}
{{outlet}}