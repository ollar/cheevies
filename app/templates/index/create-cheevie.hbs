<div class="modal is-active">
  <div class="modal-background"></div>
  <div class="modal-content">
    <section class="section">
      <h1 class="title">
        {{t 'create-cheevie.title'}}
      </h1>
      <h3 class="subtitle">
        {{t 'create-cheevie.subtitle'}}
      </h3>

      {{#images-drop-area
        images=model.photoUR
        uploadImage=(action 'uploadImage')
      }}
        {{#if image}}
          <figure class="image">
            <img src={{image.url}}>
          </figure>

          <a class="delete is-large" {{action 'removeImage'}}></a>
        {{else}}
          {{icon-image data=model size=300}}
        {{/if}}
      {{/images-drop-area}}

      <form {{action 'createCheevie' on="submit"}}>
        <div class="field">
          <label class="label">{{t 'create-cheevie.form.name.label'}}</label>
          <div class="control">
            {{input class="input" type="text" placeholder=(t 'create-cheevie.form.name.placeholder') value=model.name}}
          </div>
        </div>

        <div class="field">
          <label class="label">{{t 'create-cheevie.form.description.label'}}</label>
          <div class="control">
            {{textarea class="textarea" placeholder=(t 'create-cheevie.form.description.placeholder') value=model.description}}
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <button class="button is-primary">{{t 'buttons.submit'}}</button>
          </div>
          <div class="control">
            <button class="button is-text" type="button" {{action 'goBack'}}>{{t 'buttons.cancel'}}</button>
          </div>
        </div>
      </form>
    </section>
  </div>
  <button class="modal-close is-large" aria-label="close" {{action 'goBack'}}></button>
</div>