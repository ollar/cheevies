<section class="hero is-success is-fullheight">
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
      <li>{{link-to (t 'nav.home') 'index'}}</li>
      <li>{{link-to (t 'nav.profile') 'profile' this.model}}</li>
    </ul>
  </nav>
  <div class="hero-body">
    <div class="container">
      {{#images-drop-area
        images=model.imageUrl
        uploadImage=(action 'uploadImage')
      }}
        {{icon-image data=this.model size=200}}
        {{#if isMe}}
          {{#if model.imageUrl}}
            <a class="delete is-large" {{action 'removeImage'}}></a>
          {{/if}}
        {{/if}}
      {{/images-drop-area}}
      <h1 class="title">
        {{model.name}}
      </h1>
      <div class="cheevies">
        {{#each model.cheevies as |cheevie|}}
          {{icon-image data=cheevie size=50 class="is-inline-block"}}
        {{/each}}
      </div>

      {{#unless isMe}}
        <button class="button is-large is-light is-outlined" {{action 'showCheeviesPicker' true}}>{{t 'profile.buttons.give-cheevie'}}</button>
      {{/unless}}
    </div>
  </div>
</section>

{{#if cheeviesPickerIsVisible}}
  <div class="modal is-active">
    <div class="modal-background"></div>
    <div class="modal-content">
      <section class="section">
        <div class="columns is-mobile is-centered is-multiline">
          {{#each cheevies as |cheevie|}}
            <div class="column has-text-centered">
              <div {{action 'pickCheevie' cheevie on="click"}}>
                {{cheevie-in-list cheevie=cheevie class="is-inline-block"}}
              </div>
            </div>
          {{/each}}
        </div>
      </section>
    </div>
    <button class="modal-close is-large" aria-label="close" {{action 'showCheeviesPicker' false}}></button>
  </div>
{{/if}}
