<div class="date">
{{date}}
</div>
{{!-- user --}}
{{#if user}}
    <LinkTo @route="index.profile" @model={{user}}>
        <IconImage @data={{user}} @image={{userImage}} @class="user-icon" />
    </LinkTo>
{{/if}}

{{!-- action --}}
<div class="activity-action">
    {{t (add 'activity.actions.' _data.action)}}
</div>

{{!-- cheevie --}}
{{#if cheevie}}
    <div class="activity-cheevie">
        <LinkTo @route="index.index.cheevie-details" @model={{cheevie}}>
            <IconImage @data={{cheevie}} @image={{cheevieImage}} @class="cheevie-icon" />
        </LinkTo>
    </div>
{{/if}}

{{yield}}