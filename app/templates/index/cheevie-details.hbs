{{#modal-wrapper goBack=(action 'goBack')}}
  {{#if (eq showMode)}}
    <button class="icon-button mode-toggle is-info" {{action 'toggleMode'}}>
      {{svg-icon _name="edit" _size=24}}
    </button>
    <figure class="image">
      <img src={{image.url}}>
    </figure>

    <h1 class="title">
      {{model.name}}
    </h1>

    <div class="description">
      {{model.description}}
    </div>
  {{else}}
    <button class="icon-button mode-toggle" {{action 'toggleMode'}}>
      {{svg-icon _name="chevron-left" size=24}}
    </button>
    <button class="icon-button cheevie-delete" {{action 'deleteCheevie'}}>
      {{svg-icon _name="x" size=24}}
    </button>

    {{#images-drop-area
      uploadImage=(action 'uploadImage')
    }}
      {{#if image}}
        <figure class="image">
          <img src={{image.url}}>
        </figure>

        <a class="delete is-large" {{action 'removeImage'}}></a>
      {{else}}
        {{icon-image data=model _size=300}}
      {{/if}}
    {{/images-drop-area}}

    {{partial 'cheevie-edit-form'}}
  {{/if}}
{{/modal-wrapper}}
