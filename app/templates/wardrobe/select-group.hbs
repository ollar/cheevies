<div class="center-wrapper">
  <div class="logo-wrapper">
        <img src={{get-path 'images/Logo.svg'}} alt="Logo">
  </div>

  <ul class="form-errors">
    {{#each model.errors as |error|}}
    <li>
        {{error.attribute}}: {{error.message}}
    </li>
    {{/each}}
  </ul>

   <section class="group-select-section" test-id="group-select-section">
        <div class="user-image-wrapper">
        <IconImage @data={{myModel}} @image={{myImage}} @class="user-avatar" />
        <button class="icon-button" data-test-id="invalidate-button" {{action 'invalidate'}}>
            <SvgIcon @_name="x" @_size={{20}} />
        </button>
        </div>

        <form {{action 'selectGroup' on="submit"}} novalidate>
        <div class="field">
            <label class="label" for="group">{{t 'form.group.label'}}</label>
            <div class="control">
            <Input class="input" @id="group" placeholder=" " @value={{model.group}} @autocapitalize="off" @autocomplete="off" />
            <div class="placeholder">{{t 'form.group.placeholder'}}</div>
            <div class="background"></div>

                <button type="submit" class="submit-button icon-button">
                    <SvgIcon @_name="arrow-right" @_size={{20}} />
                </button>
            </div>
        </div>
        </form>
    </section>
</div>

{{outlet}}

<div class="text-center-wrapper">
    <LinkTo @route="create-group">{{t 'nav.create-group' }}</LinkTo>
</div>