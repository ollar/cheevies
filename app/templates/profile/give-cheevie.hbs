<ModalWrapper @goBack={{action "goBack"}} @class="give-cheevie-modal" @giveCheevieModal={{true}}>
    <div class="cheevies grid-wrapper-3">
        {{#each model.cheevies as |cheevie|}}
            <div class="cheevie-item has-text-centered">
                <div {{action 'pickCheevie' cheevie on="click"}}>
                    <CheevieInList @cheevie={{cheevie}} @id={{cheevie.id}} />
                </div>
            </div>
        {{else}}
            <div class="empty-placeholder">
                {{t 'no-cheevies-placeholder'}}
            </div>
        {{/each}}
    </div>
</ModalWrapper>

{{outlet}}